<mvc:View
    controllerName="com.sap.client.controller.EmployeeList"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page
                    id="page"
                    title="{i18n>title}"
                >
                    <content>
                        <Button
                            id="exp"
                            text="Click Me"
                            press="getEmployeesData"
                        />
                        <Table
                            items="{EmployeeData>/EmployeeList}"
                            id="table0"
                            selectionChange="onSelect"
                        >
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer />
                                        <SearchField
                                            id="searchField"
                                            width="20%"
                                            placeholder="search"
                                            search=".onSearch"
                                        />
                                        <Button
                                            id="createButton"
                                            icon="sap-icon://add"
                                            tooltip="Create"
                                            visible="true"
                                            press="onOpenAddDialog"
                                        >
                                            <layoutData>
                                                <OverflowToolbarLayoutData
                                                    priority="NeverOverflow"
                                                />
                                            </layoutData>
                                        </Button>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <items>
                                <ColumnListItem
                                    type="Active"
                                    id="item0"
                                    press="onSelect"
                                >
                                    <cells>
                                        <Text
                                            id="id1"
                                            text="{EmployeeData>Id}"
                                        />
                                        <Text
                                            id="id2"
                                            text="{EmployeeData>First_Name} {EmployeeData>Last_Name}"
                                        />
                                        <Text
                                            id="id5"
                                            text="{EmployeeData>Department}"
                                        />
                                        <!-- <Button id="id6" icon="sap-icon://edit" press="onSelect" /> -->
                                    </cells>
                                </ColumnListItem>
                            </items>
                            <columns>
                                <Column>
                                    <header>
                                        <Label text="Id" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Name" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Department" />
                                    </header>
                                </Column>
                                <!-- <Column>
                                    <header>
                                        <Label text="" />
                                    </header>
                                </Column> -->
                            </columns>
                        </Table>
                    </content>
