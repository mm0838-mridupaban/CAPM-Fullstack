<mvc:View
    controllerName="com.sap.client.controller.EmployeeList"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page
                    id="page"
                    title="Employee List"
                >
                    <content>
                        <Table
                            items="{EmployeeData>/EmployeeList}"
                            id="table0"
                            selectionChange="onSelect"
                        >
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer />
                                        <SearchField
                                            id="searchField"
                                            width="20%"
                                            placeholder="search"
                                            search=".onSearch"
                                        />
                                        <Button
                                            id="createButton"
                                            icon="sap-icon://add"
                                            tooltip="Create"
                                            visible="true"
                                            press="onOpenAddDialog"
                                        >
                                            <layoutData>
                                                <OverflowToolbarLayoutData
                                                    priority="NeverOverflow"
                                                />
                                            </layoutData>
                                        </Button>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <items>
                                <ColumnListItem
                                    type="Active"
                                    id="item0"
                                    press="onSelect"
                                >
                                    <cells>
                                        <Text
                                            id="id1"
                                            text="{EmployeeData>Id}"
                                        />
                                        <Text
                                            id="id2"
                                            text="{EmployeeData>First_Name} {EmployeeData>Last_Name}"
                                        />
                                        <Text
                                            id="id5"
                                            text="{EmployeeData>Department}"
                                        />
                                        <!-- <Button id="id6" icon="sap-icon://edit" press="onSelect" /> -->
                                    </cells>
                                </ColumnListItem>
                            </items>
                            <columns>
                                <Column>
                                    <header>
                                        <Label text="Id" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Name" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Department" />
                                    </header>
                                </Column>
                                <!-- <Column>
                                    <header>
                                        <Label text="" />
                                    </header>
                                </Column> -->
                            </columns>
                        </Table>
                    </content>
                  
                    <!-- iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii -->
                    <dependents>
                        <Dialog
                            id="OpenDialog"
                            title="New Employee Registration"
                        >
                            <buttons>
                                <!-- Buttons definition -->
                            </buttons>
                            <content>
                                <f:SimpleForm
                                    id="simpleFormChange"
                                    editable="true"
                                    class="editableForm"
                                >
                                    <f:content>
                                        <Label text="ID" />
                                        <Input
                                            value="{EmployeeData>/NewEmployee/Id}"
                                        />
                                        <Label text="First Name" />
                                        <Input
                                            value="{EmployeeData>/NewEmployee/First_Name}"
                                        />
                                        <Label text="Last Name" />
                                        <Input
                                            value="{EmployeeData>/NewEmployee/Last_Name}"
                                        />
                                        <Label text="Phone Number" />
                                        <Input
                                            value="{EmployeeData>/NewEmployee/Phone_Number}"
                                        />
                                        <Label text="Email" />
                                        <Input
                                            value="{EmployeeData>/NewEmployee/Email}"
                                        />

                                        <Label text="Department" />
                                        <Input
                                            value="{EmployeeData>/NewEmployee/Department}"
                                        />

                                        <Button
                                            text="Create"
                                            press="onCreate"
                                        />
                                        <Button
                                            text="Cancel"
                                            press=".onCancelDialog"
                                        />
                                    </f:content>
                                </f:SimpleForm>
                            </content>
                        </Dialog>
                    </dependents>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
